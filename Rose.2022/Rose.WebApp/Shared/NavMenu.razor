<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">Advent of Code</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="this.ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class="@(this.NavMenuCssClass) nav-scrollable" @onclick="this.ToggleNavMenu">
	<nav class="flex-column">
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="" Match="NavLinkMatch.All">
				<span class="oi oi-home" aria-hidden="true"></span> Home
			</NavLink>
		</div>
	</nav>
</div>

@code {
	private bool collapseNavMenu = true;

	private string? NavMenuCssClass => this.collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		this.collapseNavMenu = !this.collapseNavMenu;
	}

}
